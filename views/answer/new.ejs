<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add New  Answer to <%= question.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/questions/<%= question._id %>/answers" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="answer[content]" placeholder="content">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="answer[author]" placeholder="author">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/questions">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>